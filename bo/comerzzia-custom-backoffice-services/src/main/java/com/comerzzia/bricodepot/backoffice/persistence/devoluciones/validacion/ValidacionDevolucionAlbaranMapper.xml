  <select id="consultarPaginado" parameterType="map" resultMap="ExtendedResultMap">
select cab.uid_actividad,
cab.id_clie_albaran,
det.linea,
cab.fecha as fecha_albaran,
cab.hora as hora_albaran,
dev.id_usuario_supervisor,
usu_sup.desusuario as des_usuario_supervisor,
det.desart as des_art,
det.cantidad,
mot.descripcion as des_motivo,
det.importe_total as importe,
	       (select case when count(*) &gt; 1 then 'Varios'
	                    when count(*) = 1 then medios_pago.desmedpag_ven
	                    when count(*) &lt; 1 then '' end 
	        from d_clie_albaranes_pag_tbl det_pagos
	        inner join d_medios_pago_ven_tbl medios_pago on det_pagos.id_medpag_ven = medios_pago.id_medpag_ven 
	        where det_pagos.uid_actividad = cab.uid_actividad and det_pagos.id_clie_albaran = cab.id_clie_albaran ) med_pag,
alm.desalm as des_alm,
cab.referencia_cliente,
cab.cod_albaran_origen,
dev.validado,
usu_val.desusuario as des_usuario_validador,
dev.fecha_validacion,
dev.uid_ticket
		from d_clie_albaranes_cab_tbl cab
		inner join d_clie_albaranes_det_tbl det on(det.uid_actividad = cab.uid_actividad and det.id_clie_albaran = cab.id_clie_albaran)
		inner join x_clie_albaranes_dev_tbl dev on(dev.uid_actividad = det.uid_actividad and dev.id_clie_albaran = det.id_clie_albaran and dev.linea = det.linea)
		inner join x_clie_albaranes_det_tbl det_motivo on(dev.uid_actividad = det_motivo.uid_actividad and dev.id_clie_albaran = det_motivo.id_clie_albaran and dev.linea = det_motivo.linea)
		inner join x_motivos_tbl mot on(det_motivo.uid_actividad = mot.uid_actividad and det_motivo.codigo = mot.codigo )
		inner join d_usuarios_tbl usu_sup on(dev.uid_actividad = usu_sup.uid_instancia and dev.id_usuario_supervisor = usu_sup.id_usuario)
		left join d_usuarios_tbl usu_val on(dev.uid_actividad = usu_val.uid_instancia and dev.id_usuario_validador = usu_val.id_usuario)
		inner join d_almacenes_tbl alm on(cab.uid_actividad = alm.uid_actividad and cab.codalm = alm.codalm)
	<where>
		<trim prefix="(" prefixOverrides="and" suffix=")">
			<if test="uidActividad != null">
				and cab.uid_actividad = #{uidActividad,jdbcType=VARCHAR}
			</if>
			<if test="fechaDesde != null">
				and cab.fecha &gt;= #{fechaDesde,jdbcType=TIMESTAMP} and cab.hora &gt;= #{fechaDesdeTime}
			</if>
			<if test="fechaHasta != null">
				and cab.fecha &lt;= #{fechaHasta,jdbcType=TIMESTAMP} and cab.hora &lt;= #{fechaHastaTime}
			</if>
			<if test="codAlm != null and codAlm != ''">
				and cab.codalm = #{codAlm}
			</if>
			<if test="idUsuarioSupervisor != null and idUsuarioSupervisor != ''">
				and dev.id_usuario_supervisor = #{idUsuarioSupervisor}
			</if>
			<if test="codArt != null and codArt != ''">
				and det.codart = #{codArt}
			</if>
			<if test="referenciaCliente != null and referenciaCliente != ''">
				and (
					UPPER(cab.referencia_cliente) LIKE UPPER(CONCAT('%', #{referenciaCliente}, '%'))
					OR
					UPPER(cab.cod_albaran_origen) LIKE UPPER(CONCAT('%', #{referenciaCliente}, '%'))
					)
			</if>
			
			<if test='validado != null and validado == "S"'>
				and dev.validado = 'S'
			</if>
			<if test='validado != null and validado == "N"'>
				and (dev.validado is null or dev.validado &lt;&gt; 'S')
			</if>
			
		</trim>
	</where>
	order by fecha_albaran desc, hora_albaran desc
  </select>
  
