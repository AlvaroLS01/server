<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.comerzzia.pos.persistence.tarifas.TarifaMapper" >
  <resultMap id="BaseResultMap" type="com.comerzzia.pos.persistence.tarifas.TarifaBean" >
    <id column="UID_ACTIVIDAD" property="uidActividad" jdbcType="VARCHAR" />
    <id column="CODTAR" property="codTarifa" jdbcType="VARCHAR" />
    <result column="DESTAR" property="desTarifa" jdbcType="VARCHAR" />
    <result column="VERSION" property="version" jdbcType="DECIMAL" />
    <result column="ID_GRUPO_IMPUESTOS" property="idGrupoImpuestos" jdbcType="DECIMAL" />
    <result column="ID_TRAT_IMPUESTOS" property="idTratImpuestos" jdbcType="DECIMAL" />
    <result column="FECHA_VERSION" property="fechaVersion" jdbcType="TIMESTAMP" />
    <result column="CODTAR_PADRE" property="codTarifaPadre" jdbcType="VARCHAR" />
    <result column="PRECIOS_CON_IMPUESTOS" property="precioConImpuestos" jdbcType="CHAR" />
  </resultMap>
  <sql id="Example_Where_Clause" >
    <where >
      <foreach collection="oredCriteria" item="criteria" separator="or" >
        <if test="criteria.valid" >
          <trim prefix="(" suffix=")" prefixOverrides="and" >
            <foreach collection="criteria.criteria" item="criterion" >
              <choose >
                <when test="criterion.noValue" >
                  and ${criterion.condition}
                </when>
                <when test="criterion.singleValue" >
                  and ${criterion.condition} #{criterion.value}
                </when>
                <when test="criterion.betweenValue" >
                  and ${criterion.condition} #{criterion.value} and #{criterion.secondValue}
                </when>
                <when test="criterion.listValue" >
                  and ${criterion.condition}
                  <foreach collection="criterion.value" item="listItem" open="(" close=")" separator="," >
                    #{listItem}
                  </foreach>
                </when>
              </choose>
            </foreach>
          </trim>
        </if>
      </foreach>
    </where>
  </sql>
  <sql id="Base_Column_List" >
    UID_ACTIVIDAD, CODTAR, DESTAR, VERSION, ID_GRUPO_IMPUESTOS, ID_TRAT_IMPUESTOS, FECHA_VERSION, 
    CODTAR_PADRE, PRECIOS_CON_IMPUESTOS
  </sql>
  <select id="selectByExample" resultMap="BaseResultMap" parameterType="com.comerzzia.pos.persistence.tarifas.TarifaExample" resultSetType="SCROLL_INSENSITIVE" >
    select
    <if test="distinct" >
      distinct
    </if>
    <include refid="Base_Column_List" />
    from D_TARIFAS_CAB_TBL
    <if test="_parameter != null" >
      <include refid="Example_Where_Clause" />
    </if>
    <if test="orderByClause != null" >
      order by ${orderByClause}
    </if>
  </select>
  <select id="selectByPrimaryKey" resultMap="BaseResultMap" parameterType="com.comerzzia.pos.persistence.tarifas.TarifaKey" >
    select 
    <include refid="Base_Column_List" />
    from D_TARIFAS_CAB_TBL
    where UID_ACTIVIDAD = #{uidActividad,jdbcType=VARCHAR}
      and CODTAR = #{codTarifa,jdbcType=VARCHAR}
  </select>  
</mapper>