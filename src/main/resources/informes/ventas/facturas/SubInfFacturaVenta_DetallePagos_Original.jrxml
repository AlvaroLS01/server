	<parameter name="ID_FACTURA_REP" class="java.math.BigDecimal"/>
	<parameter name="UID_ACTIVIDAD" class="java.lang.String"/>
	<queryString>
		<![CDATA[SELECT
     MEDIOS_PAGO_VEN.DESMEDPAG_VEN AS DESMEDPAG,
     COBROS_VEN.FECHA_VENCIMIENTO AS COBROS_VEN_FECHA_VENCIMIENTO,
     COBROS_VEN.IMPORTE AS COBROS_VEN_IMPORTE,
     FACTURAS_PAG.IMPORTE AS FACTURAS_PAG_IMPORTE
FROM
	D_FACTURAS_REP_PAG_TBL FACTURAS_PAG
	INNER JOIN D_FACTURAS_REP_CAB_TBL CABECERA
		ON FACTURAS_PAG.UID_ACTIVIDAD = CABECERA.UID_ACTIVIDAD AND FACTURAS_PAG.ID_FACTURA_REP = CABECERA.ID_FACTURA_REP
     	INNER JOIN D_CLIENTES_TBL CLIENTES
		ON CABECERA.UID_ACTIVIDAD = CLIENTES.UID_ACTIVIDAD AND CABECERA.CODCLI = CLIENTES.CODCLI
     	LEFT OUTER JOIN D_COBROS_VEN_TBL COBROS_VEN
		ON CABECERA.UID_ACTIVIDAD = COBROS_VEN.UID_ACTIVIDAD AND CABECERA.ID_VENCIMIENTO_ENLACE = COBROS_VEN.ID_VENCIMIENTO_ENLACE
     	LEFT OUTER JOIN D_MEDIOS_PAGO_VEN_TBL MEDIOS_PAGO_VEN
		ON FACTURAS_PAG.UID_ACTIVIDAD = MEDIOS_PAGO_VEN.UID_ACTIVIDAD AND FACTURAS_PAG.ID_MEDPAG_VEN = MEDIOS_PAGO_VEN.ID_MEDPAG_VEN

WHERE 	CABECERA.UID_ACTIVIDAD = $P{UID_ACTIVIDAD}
	AND CABECERA.ID_FACTURA_REP = $P{ID_FACTURA_REP}]]>
	</queryString>
