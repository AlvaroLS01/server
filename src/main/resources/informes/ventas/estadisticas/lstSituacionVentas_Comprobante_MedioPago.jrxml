	<queryString>
		<![CDATA[SELECT  SUM(CARGO - ABONO) AS MOVIMIENTO, DET.CODMEDPAG, DESMEDPAG FROM D_CAJA_CAB_TBL CAB
INNER JOIN D_CAJA_DET_TBL DET
ON (CAB.UID_ACTIVIDAD = DET.UID_ACTIVIDAD AND CAB.UID_DIARIO_CAJA = DET.UID_DIARIO_CAJA)
INNER JOIN D_MEDIOS_PAGO_TBL MP ON (DET.UID_ACTIVIDAD = MP.UID_ACTIVIDAD AND DET.CODMEDPAG = MP.CODMEDPAG)
WHERE CAB.UID_ACTIVIDAD = $P{UID_ACTIVIDAD} AND CAST(FECHA AS DATE) = $P{FECHA} AND CAB.CODALM = $P{CODALM} AND DOCUMENTO IS NOT NULL
GROUP BY DET.CODMEDPAG, DESMEDPAG]]>
